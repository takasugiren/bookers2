        <% if @book.errors.any? %>
          <%= @book.errors.count %>件のerrorが発生しました
          <% @book.errors.full_messages.each do |message| %>
          <li class="error-messages"><%= message %></li>
         <% end %>
        <% end %>
        <h2>User info</h2>
        <%= attachment_image_tag @user, :profile_image, size: '100x100', fallback: "no_image.jpg"%>
        <table class="table">
         <tbody>
           <tr></tr>
           <tr>
             <th>name</th>
             <th><%= @user.name %></th>
           </tr>
           <tr>
             <th>introduction</th>
             <th><%= @user.introduction %></th>
           </tr>
         </tbody>
        </table>
        <div class="row">
          <%= link_to "", edit_user_path(@user.id), class: "btn btn-outline-secondary btn-block fas fa-user-cog" %>
        </div>
        <h2 class="mt-3">New book</h2>
        <%= form_with model:book, local:true do |f| %>
          <div class="from">
            <p class="text">Title</p>
            <%= f.text_field :title %>
          </div>
          <div class="from">
            <p class="text">Opinion</p>
            <%= f.text_area :body %>
          </div>
          <div class="from">
            <%= f.submit 'Create Book' %>
          </div>
        <% end %>
