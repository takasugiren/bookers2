        <h2>User info</h2>
        <%= attachment_image_tag @book.user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg"%>
        <table class="table">
         <tbody>
           <tr></tr>
           <tr>
             <th>name</th>
             <th><%= current_user.name %></th>
           </tr>
           <tr>
             <th>introduction</th>
             <th></th>
           </tr>
         </tbody>
        </table>
        <div class="row">
          <%= link_to "", "/users/:id/edit", class: "btn btn-outline-secondary btn-block fas fa-user-cog" %>
        </div>
        <h2 class="mt-3">New book</h2>
        <% if @book.errors.any? %>
         <%= @book.errors.count %>件のエラーが発生しました
         <% @book.errors.full_messages.each do |message| %>
         <%= message %>
         <% end %>
        <% end %>
        <%= form_with model:@book, local:true do |f| %>
          <div class="from-group">
            <p>Title</p>
            <%= f.text_field :title %>
          </div>
          <div class="from-group">
            <p>Opinion</p>
            <%= f.text_area :body %>
          </div>
          <div class="from-group">
            <%= f.submit 'Create Book' %>
          </div>
        <% end %>
      