<main>
  <p id="notice"></p>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>
        <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg"%>
        <table class="table">
         <tbody>
           <tr></tr>
           <tr>
             <th>name</th>
             <th><%= current_user.name %></th>
           </tr>
           <tr>
             <th>introduction</th>
           </tr>
         </tbody>
        </table>
        <div class="row">
          <%= link_to "", "/users/:id/edit", class: "btn btn-outline-secondary btn-block fas fa-user-cog" %>
        </div>
      </div>
    </div>
  </div>
</main>